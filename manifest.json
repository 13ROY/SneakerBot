{
  "manifest_version": 2,
  "name": "Sneaker Bot",
  "description":
    "This is a sneaker bot that currently works with Footlocker.com",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "/images/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage",
    "unlimitedStorage"
  ]
}
